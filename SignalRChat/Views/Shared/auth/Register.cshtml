@using CoreLayer.ViewModels.authentication
@model RegisterViewModel

<form method="post" asp-controller="Authentication" asp-action="Register">
        <div asp-validation-summary="All" class="text-danger"></div>
        <h1 class="text-center">ثبت نام</h1>
        <label>نام کاربری : </label>
        <input type="text" asp-for="Username" class="form-control">
        <label class="mt-3">کلمه عبور : </label>
        <input type="password" asp-for="Password" class="form-control">
        <label class="mt-3">تکرار کلمه عبور : </label>
        <input type="password" asp-for="RePassword" class="form-control">
        <button type="submit" class="btn btn-success mt-4 float-end" style="margin-right: 8px;">ثبت نام</button>
        <button type="button" id="login-btn" class="btn btn-primary mt-4 ">ورود به حساب</button>
    </form>
