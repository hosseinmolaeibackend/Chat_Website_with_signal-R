@section Scripts {
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>

    <script src="~/js/SignalRCustom.js"></script>
    <script>
        var connection = new signalR.HubConnectionBuilder().withUrl("/chat").build();
        var currentId = 0;
        var userId = 0;

        connection.onclose(() => {
            console.log("اتصال قطع شد.");
        });
        connection.on("NewGroup", appendGroup);

        connection.on("JoinGroup", function joines (group, chats) {
            $(".footer").css("display", "block");
            $(".header").css("display", "block");
            $(".header h2").html(group.groupTitle);
            currentId = group.id;
            console.log(currentId);
        });

        connection.on("Test",function (id) {
            userId = id;
            console.log(userId);
            });

        connection.on("ReceiveMessage", function (chat) {
            if (userId === chat.userId) {
                console.log("پیام من:", chat.chatBody);
                $(".chats").append(`
                    <div class="chat-me">
                        <div class="chat">
                            <p>${chat.chatBody}</p>
                            <span>0000</span>
                        </div>
                    </div>
                `);
            } else {
                console.log("پیام شما:", chat.chatBody);
                $(".chats").append(`
                    <div class="chat-you">
                        <div class="chat">
                            <p>${chat.chatBody}</p>
                            <span>000</span>
                        </div>
                    </div>
                `);
            }
        });

        connection.start();
        

        function SendMessage(event) {
            event.preventDefault();
            var text = $("#messagetext").val();
            if (text!=null) {
                connection.invoke("SendMessage", text, currentId);
            }
            else{
                alert("errorr");
            }
        }

        function JoinInGroup(token) {
            connection.invoke("JoinGroup", token,currentId);
        }

    </script>
}